<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/grey_0</item>
        <item name="windowNoTitle">true</item>
        <item name="popupTheme">@style/Widget.AppCompat.Light.PopupMenu.Overflow</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="baseLayoutParam">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="commonListViewStyle" parent="baseLayoutParam">
        <item name="android:drawSelectorOnTop">false</item>
    </style>

    <style name="mainPageTabsStyle" parent="baseLayoutParam">
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="mainPagerStyle" parent="baseLayoutParam">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="cardStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="cardRelativeLayoutStyle" parent="baseLayoutParam">
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="cardImageViewStyle">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">95dp</item>
        <item name="android:layout_width">95dp</item>
    </style>

    <style name="MainActivityTheme" parent="@style/AppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Daily.Widget.ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ActionBar.TitleText.Light" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
</resources>
